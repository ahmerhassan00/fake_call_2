<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".characterscreen"
    android:background="@drawable/rectangle_58">

    <RelativeLayout
        android:id="@+id/welcome_Relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/adView"
        android:background="@drawable/rectangle_27">

        <TextView
            android:id="@+id/welcome_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:text="Characters"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_marginStart="5dp"
            android:src="@drawable/group_48"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcome_Relative"
        android:id="@+id/scroll">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/rel1">
                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageschar">

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view1"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="10dp"
                        card_view:cardCornerRadius="12dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:id="@+id/img1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/char_1"/>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wednesday char"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/card_view1"
                        android:id="@+id/btn1"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_toRightOf="@+id/imageschar"
                    android:id="@+id/imageschar2"
                    >
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="10dp"
                        card_view:cardCornerRadius="12dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:id="@+id/img2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/char_5"/>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textAllCaps="false"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/card_view2"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:id="@+id/btn2"/>
                </RelativeLayout>
            </RelativeLayout>
            <com.google.android.ads.nativetemplates.TemplateView
                android:id="@+id/my_template"
                app:gnt_template_type="@layout/gnt_medium_template_view"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:layout_below="@+id/rel1"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/my_template"
                android:id="@+id/rel2">
                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageschar3">

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view3"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="10dp"
                        card_view:cardCornerRadius="12dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:id="@+id/img3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/char_3"/>
                    </androidx.cardview.widget.CardView>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adams"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/card_view3"
                        android:id="@+id/btn3"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_toRightOf="@+id/imageschar3"
                    android:id="@+id/imageschar4"
                    >
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view4"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="10dp"
                        card_view:cardCornerRadius="12dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:id="@+id/img4"
                            android:scaleType="centerCrop"
                            android:src="@drawable/char_4"/>
                    </androidx.cardview.widget.CardView>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wednesday New"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/card_view4"
                        android:layout_marginTop="8dp"
                        android:id="@+id/btn4"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>