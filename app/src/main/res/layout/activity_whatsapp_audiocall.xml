<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_58"
    tools:context=".Whatsapp_audiocall">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/bottom"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/topItems"
            android:background="#007376">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_centerInParent="true"
                android:src="@drawable/char_3"
                app:civ_border_color="#00000000"
                app:civ_border_width="1dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:id="@+id/callername"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whatsapp voice call"
                android:textColor="#B4FFFFFF"
                android:textSize="16sp"
                android:layout_below="@+id/callername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:id="@+id/wA_txt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#B4FFFFFF"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_below="@+id/callername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:id="@+id/wA_timer"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topItems"
            android:background="#0b383d"
            android:layout_above="@+id/lastItems"
            android:id="@+id/middle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/decline_two"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginBottom="25dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:src="@drawable/cancel_call"
                app:civ_border_color="#00000000"
                app:civ_border_width="1dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/lastItems"
            android:background="#007376">




        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/items">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/answer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/accept_call"
                app:civ_border_color="#00000000"
                app:civ_border_width="1dp" />



            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/baseline_volume_up_24"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:id="@+id/speaker"
                android:layout_marginStart="15dp"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/baseline_volume_mute_24"
                android:layout_alignParentBottom="true"
                android:id="@+id/mute"
                android:visibility="gone"
                android:layout_marginStart="15dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/decline"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/cancel_call"
                app:civ_border_color="#00000000"
                app:civ_border_width="1dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/baseline_speaker_notes_24"
                app:civ_border_color="#00000000"
                app:civ_border_width="1dp" />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                android:id="@+id/mic_on"
                android:src="@drawable/baseline_mic_off_24"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                android:id="@+id/mic_off"
                android:src="@drawable/baseline_mic_24"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>