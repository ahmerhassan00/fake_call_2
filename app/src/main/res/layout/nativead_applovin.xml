<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/title_text_view"
        android:layout_marginStart="@dimen/gnt_default_margin"
        android:layout_marginLeft="@dimen/gnt_default_margin"
        android:layout_marginTop="@dimen/gnt_no_margin"
        android:layout_marginEnd="@dimen/gnt_no_margin"
        android:layout_marginRight="@dimen/gnt_no_margin"
        android:scaleType="fitCenter" />
    <LinearLayout
        android:id="@+id/ad_options_view"
        android:background="@color/gnt_white"
        android:textStyle="bold"
        android:textSize="@dimen/gnt_text_size_large"
        android:textColor="@color/gnt_gray"
        android:layout_below="@+id/advertiser_textView"
        android:lines="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/gnt_no_margin"
        android:layout_marginBottom="@dimen/gnt_no_margin"
        android:layout_marginStart="@dimen/gnt_no_margin"
        android:layout_marginEnd="@dimen/gnt_no_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/title_text_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"
        android:layout_below="@+id/media_view_container"
        android:layout_weight="0.5"
        android:background="@android:color/transparent"

    />

    <FrameLayout
        android:id="@+id/star_rating_view"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advertiser_textView"
        android:layout_marginTop="@dimen/gnt_no_margin"
        android:layout_toRightOf="@+id/icon_image_view"
        android:layout_marginEnd="@dimen/gnt_no_margin"
        android:layout_marginBottom="@dimen/gnt_no_margin"
        android:background="@android:color/transparent"
        android:lines="1"
        android:numStars="5"
        android:stepSize="0.1"
        android:textColor="@color/gnt_gray"
        android:textSize="@dimen/gnt_text_size_small"
         />
    <TextView
        android:id="@+id/advertiser_textView"
        android:background="@color/gnt_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_toRightOf="@+id/icon_image_view"
        android:paddingStart="@dimen/gnt_default_margin"
        android:paddingLeft="@dimen/gnt_default_margin"
        android:paddingBottom="@dimen/gnt_default_margin"
        android:text="hhasldlasdjsajdlklksajdlk"
        android:layout_below="@+id/body_text_view"
        android:textSize="@dimen/gnt_text_size_small"
        android:textColor="@color/black"
        android:lines="1"
        android:layout_marginBottom="@dimen/gnt_no_margin"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/gnt_no_margin"

    />

    <TextView
        android:id="@+id/body_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text_view"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/icon_image_view"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="@dimen/gnt_default_margin"
        android:paddingLeft="@dimen/gnt_default_margin"
        android:paddingBottom="@dimen/gnt_default_margin"
        android:text="ddddddddddddd"
        android:textColor="@color/black" />
    <FrameLayout
        android:id="@+id/media_view_container"
        android:layout_margin="@dimen/gnt_no_size"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/gnt_no_margin"
        android:layout_below="@+id/cta_button"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:id="@+id/cta_button"
        android:background="@drawable/rectangle_17"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp">

    </Button>
