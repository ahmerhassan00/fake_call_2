<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_58"
    tools:context="com.appsync.Video.Audio.Fake.call.prank.fun.voice.change.Exit_screen">

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/banner_container"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_exit"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardElevation="12dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="20dp"
                android:id="@+id/exit_img">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/caller"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="Contrary to popular belief, Lorem Ipsum is not simply rand rst line of Lorem Ipsum, Lorem ipsum dolor sit rst line of Lorem Ipsum, Lorem ipsum dolor sit amet"
                android:layout_below="@+id/exit_img"
                android:justificationMode="inter_word"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/exit_txt"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/exit_txt"
                android:layout_centerHorizontal="true"
                android:id="@+id/rel_exit">

                <RelativeLayout
                    android:id="@+id/btn_yes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/btns_exit">

                    <TextView
                        android:id="@+id/loginbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:text="Exit"
                        android:textColor="@color/purple_200"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <com.facebook.ads.NativeAdLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_exit"
                android:orientation="vertical" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/native_ad_container"
                android:id="@+id/otherbtns">
                <TextView
                    android:layout_width="100dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/purple_700"
                    android:padding="8dp"
                    android:textSize="17sp"
                    android:layout_toRightOf="@+id/btn_rate"
                    android:textStyle="bold"
                    android:layout_margin="12dp"
                    android:background="@drawable/btns_exit"
                    android:id="@+id/btn_no"/>

                <TextView
                    android:id="@+id/btn_rate"
                    android:layout_width="100dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/btns_exit"
                    android:padding="8dp"
                    android:text="Rate Us"
                    android:textColor="@color/purple_700"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_share"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_toRightOf="@+id/btn_no"
                    android:background="@drawable/btns_exit"
                    android:padding="8dp"
                    android:text="Share"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </RelativeLayout>

<!--            <com.facebook.ads.NativeAdLayout-->
<!--                android:id="@+id/native_ad_layout"-->
<!--                android:layout_below="@+id/rel_exit"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>